{
  "metadata": [
    {
      "src": [
        {
          "src": ".",
          "files": ["**/BuildingSystem/Scripts/*.cs"]
        }
      ],
      "dest": "docs"
    }
  ],
  "build": {
    "content": [
      {
        "files": ["**/*.{md,yml}"],
        "exclude": ["_site/**"]
      }
    ],
    "resource": [
      {
        "files": ["images/**"]
      }
    ],
    "output": "_site",
    "template": ["default", "modern"],
    "globalMetadata": {
      "_appName": "Godot In Game Building System",
      "_appTitle": "Godot In Game Building System",
      "_enableSearch": true,
      "pdf": true
    }
  }
}
